<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_product_pricelist_form" model="ir.ui.view">
            <field name="name">product.pricelist.inherited.form.copra</field>
            <field name="model">product.pricelist</field>
            <field name="inherit_id" ref="product.product_pricelist_view" />
            <field name="arch" type="xml">
                <xpath
                    expr="//form/sheet/notebook/page/group/group/field[@name='discount_policy']"
                    position="attributes">
                    <attribute name="context">{"discount_policy" : without_discount}
                    </attribute>
                </xpath>
            </field>
        </record>

    </data>
</odoo>