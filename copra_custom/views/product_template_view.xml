<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="view_product_template_inherited_form" model="ir.ui.view">
            <field name="name">product.template.inherited.form.copra</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="stock.view_template_property_form" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='stock_property']" position="after">
                    <group name="measurements" string="Measurement" attrs="{'invisible': [('product_variant_count', '>', 1)]}">
                        <field name="height"/>
                        <field name="width"/>
                        <field name="depth"/>
                        <field name="package_measurement"/>
                        <field name="gross_weight"/>
                        <field name="net_weight"/>
                    </group> 
                </xpath>
            </field>
        </record>

        <record id="view_product_inherited_form" model="ir.ui.view">
            <field name="name">product.product.inherited.form.copra</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='weight']" position="after">
                    <group name="measurements" string="Measurement">
                        <field name="height"/>
                        <field name="width"/>
                        <field name="depth"/>
                        <field name="package_measurement"/>
                        <field name="gross_weight"/>
                        <field name="net_weight"/>
                    </group> 
                </xpath>
            </field>
        </record>
    </data>
</odoo>

