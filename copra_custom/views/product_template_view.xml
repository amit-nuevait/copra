<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="product_weight_product_normal_form_copra_view" model="ir.ui.view">
            <field name="name">product.weight.product.normal.form.view</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='volume']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//label[@for='volume']" position="before">
                    <field name="package_width"/>
                    <field name="package_depth"/>
                    <field name="package_height"/>
                </xpath>
                <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                  <group name="packaging" string="Product Measurement">
                        <field name="width"/>
                        <field name="depth"/>
                        <field name="height"/>
                        <field name="net_weight"/>
                    </group>
                </xpath>
                
            </field>
        </record>

        <record id="product_template_weight_product_normal_form_copra_view" model="ir.ui.view">
            <field name="name">product.weight.product.normal.form.view</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_only_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//label[@for='volume']" position="attributes">
                    <attribute name="readonly">1</attribute>
                </xpath>
                <xpath expr="//label[@for='volume']" position="before">
                    <field name="package_width" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                    <field name="package_depth" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                    <field name="package_height" attrs="{'invisible': [('product_variant_count', '>', 1)]}"/>
                </xpath>
                <xpath expr="//group[@name='group_lots_and_weight']" position="after">
                  <group name="packaging" string="Product Measurement" attrs="{'invisible': [('product_variant_count', '>', 1)]}">
                        <field name="width"/>
                        <field name="depth"/>
                        <field name="height"/>
                        <field name="net_weight"/>
                    </group>
                </xpath>
                
            </field>
        </record>

        <record id="view_product_easy_edit_inherited_copra_form" model="ir.ui.view">
            <field name="name">product.product.inherited.form.copra</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view" />
            <field name="arch" type="xml">
                <xpath expr="//group[@name='weight']" position="after">
                    <group name="packaging" string="Product Measurement">
                        <field name="width"/>
                        <field name="depth"/>
                        <field name="net_weight"/>
                        <field name="height"/>
                    </group>
                </xpath> 
                <xpath expr="//label[@for='volume']" position="before">
                    <field name="package_width"/>
                    <field name="package_depth"/>
                    <field name="package_height"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>

