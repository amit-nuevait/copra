<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>

        <record id="view_sale_order_form" model="ir.ui.view">
            <field name="name">sale.order.inherited.form.copra</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale_stock.view_order_form_inherit_sale_stock" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='effective_date']" position="after">
                    <newline/>
                    <field name="freight_type" />
                </xpath>
                <xpath expr="//field[@name='order_line']/tree/field[@name='name']" position="after">
                    <field name="tag"/>
                    <field name="sfi"/>
                </xpath>
                <xpath expr="//field[@name='order_line']/form/field[@name='name']" position="after">
                    <field name="tag"/>
                    <field name="sfi"/>
                </xpath>
                <field name='analytic_account_id' position="replace"/>
                <xpath expr="//field[@name='payment_term_id']" position="after">
                    <field name="analytic_account_id" string="Project"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
