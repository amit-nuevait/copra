<odoo>
    <data>
        <template id="sale_order_portal_content_inherit"
            inherit_id="sale.sale_order_portal_content">
            <xpath
                expr="//table[@id='sales_order_table']//thead//tr//th[@t-if='display_discount']"
                position="replace">
                <th t-if="display_discount"
                    t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                    <span>Disc Type</span>
                </th>
                <th t-if="display_discount"
                    t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                    <span>Disc</span>
                </th>
            </xpath>

            <xpath
                expr="//table[@id='sales_order_table']//tbody//tr//td[@t-if='display_discount']"
                position="replace">
                <td t-if="display_discount and line.discount_type"
                    t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                    <strong t-if="line.discount &gt; 0" class="text-info">
                        <t t-if="line.discount_type == 'percent'">Percent</t>
                        <t t-if="line.discount_type == 'fixed'">Fixed</t>
                    </strong>
                </td>
                <td t-if="display_discount"
                    t-attf-class="text-right {{ 'd-none d-sm-table-cell' if report_type == 'html' else '' }}">
                    <strong t-if="line.discount &gt; 0" class="text-info">
                        <t
                            t-esc="((line.discount % 1) and '%s' or '%d') % line.discount" />
                    </strong>
                </td>
            </xpath>

            <xpath
                expr="//table[@id='sales_order_table']//tbody//tr//td//div[@t-if='line.discount']"
                position="replace">
                <div t-if="line.discount and line.discount_type != 'fixed'">
                    <t t-esc="(1-line.discount / 100.0) * line.price_unit"
                        t-options='{"widget": "float", "decimal_precision": "Product Price"}' />
                </div>
                <div t-if="line.discount and line.discount_type == 'fixed'">
                    <t
                        t-esc="line.price_unit - (line.discount / line.product_uom_qty)"
                        t-options='{"widget": "float", "decimal_precision": "Product Price"}' />
                </div>
            </xpath>
        </template>

        <template id="sale_order_portal_content_totals_table_inherit"
            inherit_id="sale.sale_order_portal_content_totals_table">
            <xpath expr="//table" position="before">
                <table class="table table-sm">
                    <tr t-if="sale_order.line_discount > 0.0" class="border-black">
                        <td>
                            <span>Line Discount</span>
                        </td>
                        <td class="text-right">
                            <span t-field="sale_order.line_discount"
                                t-options='{"widget": "monetary", "display_currency": sale_order.pricelist_id.currency_id}' />
                        </td>
                    </tr>
                    <tr t-if="sale_order.total_global_discount > 0.0" class="border-black">
                        <td>
                            <span>Global Discount</span>
                        </td>
                        <td class="text-right">
                            <span t-field="sale_order.total_global_discount" t-options='{"widget": "monetary", "display_currency": sale_order.pricelist_id.currency_id}'/>
                        </td>
                    </tr>
                </table>
            </xpath>
        </template>
    </data>
</odoo>
