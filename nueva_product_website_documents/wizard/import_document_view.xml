<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Import Document Wizard View -->
        <record id="view_import_document_wizard" model="ir.ui.view">
            <field name="name">import.document.wizard.view</field>
            <field name="model">import.document.wizard</field>
            <field name="arch" type="xml">
                <form string="Import Document Wizard">
                    <sheet>
                        <group>
                        <field name="file_upload" filename="name" />
                        <field name="name" invisible="1" />
                    </group>
                        <footer>
                            <button special="cancel" string="Cancel"/>
                            <button name="action_import_documents" string="Import"
                        type="object" class="oe_highlight"
                         />
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Import Document Wizard Action -->
        <record id="action_import_document_wizard" model="ir.actions.act_window">
            <field name="name">Import Document Wizard</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">import.document.wizard</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_document_wizard" />
            <field name="target">new</field>
        </record>

        <!-- Import Document Wizard Menu -->
        <menuitem id="menu_import_document_wizard"
            name="Import Document Wizard"
            parent="stock.menu_stock_inventory_control"
            action="action_import_document_wizard" />
    </data>
</odoo>
